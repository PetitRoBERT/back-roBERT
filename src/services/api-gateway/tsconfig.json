{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/ts-interfaces": ["libs/ts-interfaces/src"],
      "@app/ts-interfaces/*": ["libs/ts-interfaces/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
